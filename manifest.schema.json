{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nkllon.org/schemas/p6-21plus1-manifest.schema.json",
  "title": "P6 21+1 Probe Manifest",
  "type": "object",
  "required": ["name", "version", "created", "license", "files"],
  "properties": {
    "name": { "type": "string" },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "created": { "type": "string", "format": "date-time" },
    "license": { "type": "string" },
    "description": { "type": "string" },
    "status": { "type": "string" },
    "creator": { "type": "string" },
    "generatedAtTime": { "type": "string", "format": "date-time" },
    "ontology": {
      "type": "object",
      "required": ["versionIRI"],
      "properties": {
        "versionIRI": { "type": "string", "format": "uri" },
        "imports": {
          "type": "array",
          "items": { "type": "string", "format": "uri" }
        }
      },
      "additionalProperties": false
    },
    "shapes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "examples": {
      "type": "array",
      "items": { "type": "string" }
    },
    "diagramArtifacts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "files": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}

